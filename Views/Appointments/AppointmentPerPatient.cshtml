@model IEnumerable<proyectoFinalSI.Models.Appointment>

@{
    ViewBag.Title = "Appointment";
}
<div>
    <h2>Patient's Appointment </h2>
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            Doctor
            @*@Html.DisplayNameFor(model => model.doctor.firstName)*@
        </th>
        <th>
            Patient's Name
            @*@Html.DisplayNameFor(model => model.patient.firstName)*@
        </th>
        <th>
            Appointment Status
            @*@Html.DisplayNameFor(model => model.status)*@
        </th>
        <th>
            Appointment Date
            @*@Html.DisplayNameFor(model => model.date)*@
        </th>
        <th>
            Description
            @*@Html.DisplayNameFor(model => model.description)*@
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
           Dr. @Html.DisplayFor(modelItem => item.doctor.firstName) @Html.DisplayFor(modelItem => item.doctor.lastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.patient.firstName) @Html.DisplayFor(modelItem => item.patient.lastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.appointmentId }) |
            @Html.ActionLink("Details", "Details", new { id=item.appointmentId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.appointmentId })
        </td>
    </tr>
}

</table>
