@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>CITAPP</h1>
    <p class="lead">Make your appointment with your favorite doctor using our webpage.</p>
    <p><a href="/Home/About" class="btn btn-primary btn-lg">About us &raquo;</a></p>
</div>

<div class="row">
    <div class="col-md-4">
        <h2> Patient Login</h2>
        <div class="container">
            <form>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label>Username:</label>
                    <input type="text" name="username" class="form-control">
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input type="password" id="password" name="password" class="form-control" data-toggle="password">
                </div>
                <div class="form-group">
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
   
</div>